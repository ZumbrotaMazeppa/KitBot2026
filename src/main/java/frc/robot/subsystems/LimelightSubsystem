package frc.robot;

import edu.wpi.first.networktables.NetworkTable;
import edu.wpi.first.networktables.NetworkTableInstance;

public class LimelightSubsystem {

    private final NetworkTable limelightTable;

    public LimelightSubsystem(String tableName) {
        // Connect to the Limelight's NetworkTable (default name is "limelight")
        limelightTable = NetworkTableInstance.getDefault().getTable(tableName);
    }

    /** Get horizontal offset from crosshair to target (-27 to 27 degrees) */
    public double getTx() {
        return limelightTable.getEntry("tx").getDouble(0.0);
    }

    /** Get vertical offset from crosshair to target (-20.5 to 20.5 degrees) */
    public double getTy() {
        return limelightTable.getEntry("ty").getDouble(0.0);
    }

    /** Get target area (0% to 100% of image) */
    public double getTa() {
        return limelightTable.getEntry("ta").getDouble(0.0);
    }

    /** Check if target is detected (1 = true, 0 = false) */
    public boolean hasTarget() {
        return limelightTable.getEntry("tv").getDouble(0.0) == 1.0;
    }

    /** Set LED mode: 0 = pipeline default, 1 = off, 2 = blink, 3 = on */
    public void setLedMode(int mode) {
        limelightTable.getEntry("ledMode").setNumber(mode);
    }

    /** Set camera mode: 0 = vision processor, 1 = driver camera */
    public void setCamMode(int mode) {
        limelightTable.getEntry("camMode").setNumber(mode);
    }
}
public class Robot extends TimedRobot {
    private LimelightSubsystem limelight;

    @Override
    public void robotInit() {
        limelight = new LimelightSubsystem("limelight"); // default table name
    }

    @Override
    public void teleopPeriodic() {
        if (limelight.hasTarget()) {
            System.out.println("Target X offset: " + limelight.getTx());
            System.out.println("Target Y offset: " + limelight.getTy());
            System.out.println("Target Area: " + limelight.getTa());
        } else {
            System.out.println("No target detected.");
        }
    LimelightHelpers.setupPortForwardingUSB();
    }
}